{% extends "::base.html.twig" %}

{% block body %}
    {{ form_start(form, {'method': 'POST'}) }}
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <div class="form-body">
            <h3 class="form-section">Advance validation. <small>Etablissement</small></h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                You have some form errors. Please check below.
            </div>
            <div class="alert alert-success display-hide">
                <button class="close" data-close="alert"></button>
                Your form validation is successful!
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Code Etablissement <span class="required">
                        * </span> : {{ form_widget(form.codeEtablissement, {'attr': {'class': 'form-control','placeholder': 'code'}}) }}
                </label>
               
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Nom de l'établissement <span class="required">
                        * </span> : {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder': 'code'}}) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Code Etablissement Pere <span class="required">
                        * </span> : {{ form_widget(form.codeEtablissementPere, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
               
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Secteur <span class="required">
                        * </span> : {{ form_widget(form.secteur, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
               
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">N° Affiliation  <span class="required">
                        * </span> : {{ form_widget(form.nAffiation, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Adresse <span class="required">
                        * </span> :  {{ form_widget(form.adresse, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Code postale <span class="required">
                        * </span> : {{ form_widget(form.codePostale, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Ville<span class="required">
                        * </span> : {{ form_widget(form.ville, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Tel <span class="required">
                        * </span> :  {{ form_widget(form.tel, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Fax<span class="required">
                        * </span> :  {{ form_widget(form.fax, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">mail <span class="required">
                        * </span> :
                        <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>

                        {{ form_widget(form.mail, {'attr': {'class': 'form-control','placeholder': 'Nom','type':'email'}}) }}
                    </div>
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Filière <span class="required">
                        * </span> : {{ form_widget(form.filiere) }}
                </label>
                
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Faculté <span class="required">
                        * </span> :  {{ form_widget(form.faculte) }}
                </label>
                
            </div>

        </div>
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    <button type="button" class="btn default">Cancel</button>
                </div>
            </div>
        </div>
        <!-- END FORM-->
    </div>
    {{ form_end(form) }}
{% endblock %}  
