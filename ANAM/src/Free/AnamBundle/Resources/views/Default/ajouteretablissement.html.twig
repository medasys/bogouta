{% extends "::base.html.twig" %}

{% block body %}
    {{ form_start(form, {'method': 'POST'}) }}
<div class="portlet-body form">
							<!-- BEGIN FORM-->
							<form action="javascript:;" id="form_sample_3" class="form-horizontal">
								<div class="form-body">
									<h3 class="form-section">Advance validation. <small>Etablissement</small></h3>
									<div class="alert alert-danger display-hide">
										<button class="close" data-close="alert"></button>
										You have some form errors. Please check below.
									</div>
									<div class="alert alert-success display-hide">
										<button class="close" data-close="alert"></button>
										Your form validation is successful!
									</div>
									<div class="form-group">
										<label class="control-label col-md-3">Code Etablissement <span class="required">
										* </span>
										</label>
										<div class="col-md-4"> 
											
                                                                                        {{ form_widget(form.codeEtablissement, {'attr': {'class': 'form-control','placeholder': 'code'}}) }}
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3">Nom de l'établissement <span class="required">
										* </span>
										</label>
										<div class="col-md-4">
											
                                                                                        
                                                                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder': 'code'}}) }}
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3">Code Etablissement Pere <span class="required">
										* </span>
										</label>
										<div class="col-md-4">
											
                                                                                        {{ form_widget(form.codeEtablissementPere, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3">Secteur <span class="required">
										* </span>
										</label>
										<div class="col-md-4">
                                                                                    {{ form_widget(form.secteur, {'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
											<div class="radio-list" data-error-container="#form_2_membership_error">
												<label>
												<input type="radio" name="membership" value="1"/>
												Privé </label>
												<label>
												<input type="radio" name="membership" value="2"/>
												Public</label>
											</div>
											<div id="form_2_membership_error">
											</div>
										</div>
									</div>
									
									<div class="form-group">
