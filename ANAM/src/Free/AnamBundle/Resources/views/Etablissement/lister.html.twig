{% extends "::base.html.twig" %}



{% block body %}
    <div class="box">
        <div class="box-header">
            <div class="col-md-12">
                      <div class="content-panel">
                          <table class="table table-striped table-advance table-hover">
	                  	  	  <h4><i class="fa fa-angle-right"></i>Etablissement </h4>
	                  	  	  <hr>
                              <thead>
                              <tr>
                                  <th><i class="fa fa-bullhorn"></i> Code</th>
                                  <th class="hidden-phone"><i class="fa fa-question-circle"></i> Nom Etablissement</th>
                                  <th><i class="fa fa-bookmark"></i> Code Etablissement Pere</th>
                                  
                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
                            {% for entity in entities %}                                    
                              <tr>
                                  <td><a href="{{ path("free_anam_etablissement_see",{'id':entity.id})}}">{{ entity.codeEtablissement}}</a></td>
                                  <td class="hidden-phone">{{ entity.nom}}</td>
                                  <td>{{ entity.codeEtablissementPere}}</td>
                                 
                                  <td><span class="label label-info label-mini"></span></td>
                                  <td>
                                      <a href="{{ path("free_anam_etablissement_see",{'id':entity.id})}}"><button class="btn btn-success btn-xs" ><i class="fa fa-check"></i></button></a>
                                      <a href="{{ path("free_anam_etablissement_modifier",{'id':entity.id}) }}"><button class="btn btn-primary btn-xs" ><i class="fa fa-pencil"></i></button></a>
                                      
                                  </td>
                              </tr>
                             {% endfor %}
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              
        </div><!-- /row -->
    </div><!-- /row -->
{% endblock %}
